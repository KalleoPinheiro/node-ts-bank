{
  "env": {
    "node": true,
    "es6": true,
    "es2020": true,
    "jest": true
  },
  "extends": [
    "standard",
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": ["error", { "printWidth": 100, "arrowParens": "avoid" }],
    "no-useless-constructor": "off"
  }
}
